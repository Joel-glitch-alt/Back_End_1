// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  firstname String
  lastname  String
  username  String?   @unique
  email     String    @unique
  password  String
  role      Role      @default(BASIC)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  products  Product[]
  orders    Order[]

  @@index([email])
}

model Product {
  id     String   @id @default(uuid())
  user   User     @relation(fields: [userId], references: [id])
  userId String
  title  String   @unique
  description String
  price  Int
  images String[]
}

model Order {
  id      String   @id @default(uuid())
  user    User     @relation(fields: [userId], references: [id])
  userId  String
  items   String[]
  address String
  country String
  cost    Int
}

enum Role {
  BASIC
  ADMIN
}
